<h2 class="text-center">ジャンル一覧・追加</h2>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <p>ジャンル名</p>
      <%= f.text_field :name  %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name%></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>