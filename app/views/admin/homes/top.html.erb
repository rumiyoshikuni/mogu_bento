<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h3 class="p-3">予約注文履歴一覧</h3>
        </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>予約注文日時</th>
                <th>購入者</th>
                <th>購入個数</th>
                <th>予約注文ステータス</th>
              </tr>
            </thead>
            <tbody>
            	<% @pre_orders.each do |pre_order| %>
              	<tr>
                  <td>
                    <%= link_to admin_pre_order_path(pre_order.id) do %>
                      <%= l pre_order.created_at %>
                    <% end %>
                  </td>
                  <td><%= pre_order.customer.last_name %><%= pre_order.customer.first_name %></td>
                  <td><%= pre_order.pre_order_details.sum(:quantity) %></td>
                  <td><%= pre_order.is_active %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @pre_orders %>
      </div>
    </div>
  </div>
</div>