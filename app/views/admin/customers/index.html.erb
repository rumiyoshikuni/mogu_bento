<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h3 class="">会員一覧</h3>
        </div>
        
          <table class="table table-hover">
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>会員ステータス</th>
              </tr>
            </thead>
            <tbody>
            	<% @customers.each do |customer| %>
              	<tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to admin_customer_path(customer.id) do %>
                      <%= customer.last_name + customer.first_name %>
                      <% end %>
                  </td>
                  <td><%= customer.email %></td>
                  <td>
                    <!--is_deleted:削除されていますか-->
                    <% if customer.is_deleted == false %>
                      <p>有効</p>
                     <% elsif customer.is_deleted == true %>
                      <p>退会</p>
                  	<% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
          <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>