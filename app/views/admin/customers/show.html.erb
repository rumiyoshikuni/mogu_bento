<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h3 class="">
            <%= @customer.last_name + @customer.first_name %>さんの会員詳細
          </h3>
        </div>
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.last_name + @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana + @customer.first_name_kana %></th>
          </tr>
            <th>電話番号</th>
            <th><%= @customer.tel_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @customer.is_deleted == false %>
        	      <b class="text-success">　有効</b>
        		  <% elsif @customer.is_deleted == true %>
        			  <b class="text-success">　退会</b>
        		  <% end %>
            </th>
          </tr>
          <tr>
            <th></th>
            <th><%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success ml-4" %></th>
            <th><%= link_to "予約注文履歴一覧を見る", admin_pre_orders_path, class:"btn btn-info ml-4" %></th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
