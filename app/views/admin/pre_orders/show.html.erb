<div class="containar">
  <div class="row justify-content-center">
    <div class="col-lg-10">
    <h2>予約注文履歴詳細</h2><br>
    <%= form_with model: @pre_order, url: admin_pre_order_path, method: :patch do |f| %>
      <table class="table table-borderless table-sm">
        <tr>
          <td style="width: 20%">購入者</td>
          <td style="width: 80%">
            <%= link_to admin_customer_path(@pre_order.customer_id) do %>
              <%= @pre_order.customer.last_name + @pre_order.customer.first_name %></td>
            <% end %>
        </tr>
        <tr>
          <td>予約注文日</td>
          <td><%= @pre_order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td>受取り日</td>
          <td><%= @receiving_date %></td>
        </tr>
        <tr>
          <td>受取り時間</td>
          <td><%= @pre_order.receiving_time %></td>
        </tr>
        <tr>
          <td>ご要望</td>
          <td><%= @pre_order.demand %></td>
        </tr>
        <tr>
          <td>予約注文ステータス</td>
          <td>
            <% if item.is_active == true %>
              <p>当日</p>
            <% elsif item.is_active == false %>
              <p>翌日️</p>
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-7 mt-3">
      <table class="table table-bordered border-dark">
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
          <% @order_details.each do |pre_order_detail| %>
            <%= form_with model: pre_order_detail, url: admin_pre_order_detail_path(pre_order_detail.id), method: :patch do |f| %>
            <tr>
              <td><%= pre_order_detail.item.name %></td>
              <td><%= pre_order_detail.tax_price %></td>
              <td><%= pre_order_detail.quantity %></td>
              <td><%= pre_order_detail.quantity.to_i * pre_order_detail.tax_price %>円</td>
              <td>
                <% if customer.is_maked == false %>
                  <p>製作中</p>
                 <% elsif customer.is_maked == true %>
                  <p>製作完了</p>
              	<% end %>
              </td>
            </tr>
            <% end %>
          <% end %>
      </table>
    </div>
    <div class="col-lg-3 mt-3">
      <table class="table table-borderless">
        <tr>
          <th>請求金額</th>
          <td><strong><%= @total_peyment %> 円</strong></td>
        </tr>
      </table>
    </div>
  </div>
</div>
