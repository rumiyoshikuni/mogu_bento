<h2 class="head-line title_h2 text-center"><b>メニュー編集</b></h2>
<div class="row">
  <div class="col-ms-12 mx-auto p-5">
    <%= form_for(@item, url: admin_item_path, method: :patch, class: "form-horizontal") do |f| %>

      <div class="form-group col-12 p-2">
        <%= f.label :"メニュー画像", class: "col-3 control-label" %>
	      <%= f.file_field :image, accept: "image/*", class: "image col-8" %>
	    </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"メニュー名", class: "col-3 control-label" %>
        <%= f.text_field :name, class: "col-8" %>
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"メニューの説明", class: "col-3 control-label" %>
        <%= f.text_area :introduction, class: "col-8" %>
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"カロリー", class: "col-3 control-label" %>
        <%= f.text_field :calorie, class: "col-8" %> kcal
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"アレルギー物質", class: "col-3 control-label" %>
        <%= f.text_field :allergy, class: "col-8" %>
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"ジャンル", class: "col-3 control-label" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-8") %>
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"税抜価格", class: "col-3 control-label" %>
        <%= f.text_field :price, class: "col-8" %> 円
      </div>

      <div class="form-group col-12 p-2">
        <%= f.label :"販売ステータス", class: "col-4 control-label" %>
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :"販売中", class: "col-3" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :"販売停止", class: "col-3" %>
      </div>

      <div class="actions text-center p-3">
	      <%= f.submit "変更を保存", class: "btn btn-success btn-lg pull-right col-4" %>
      </div>
    <% end %>
  </div>
</div>