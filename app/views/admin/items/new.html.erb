<div class="container my-5 px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h3>メニュー新規登録</h3>
      </div>

      <div class="col-11 offset-1">
        <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

      <div class="form-group row">
        <%= f.label :"商品画像", class: "col-3 control-label" %>
	      <%= f.file_field :image, accept: "image/*", class: "image col-8" %>
	    </div>

      <div class="form-group row">
        <%= f.label :"商品名", class: "col-3 control-label" %>
        <%= f.text_field :name, class: "col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :"商品説明", class: "col-3 control-label" %>
        <%= f.text_area :introduction, class: "col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :"カロリー", class: "col-3 control-label" %>
        <%= f.text_field :calorie, class: "col-8" %>kcal
      </div>

      <div class="form-group row">
        <%= f.label :"アレルギー物質", class: "col-3 control-label" %>
        <%= f.text_field :allergy, class: "col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :"ジャンル", class: "col-3 control-label" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-8") %>
      </div>

      <div class="form-group row">
        <%= f.label :"税抜価格", class: "col-3 control-label" %>
        <%= f.text_field :price, class: "col-8" %>円
      </div>

      <div class="form-group row">
        <%= f.label :"販売ステータス", class: "col-md-3 font-weight-bold" %>
        <p class="col-2"><%= f.radio_button :is_active, "true" %>販売中</p>
        <p class="col-2"><%= f.radio_button :is_active, "false" %>販売停止中</p>
      </div>

      <div class="form-group col-2 offset-3 mt-2">
        <%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
  </div>
</div>