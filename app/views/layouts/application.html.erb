<!DOCTYPE html>
<html>
  <head>
    <title>MoguBento</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.pay.jp/" , type="text/javascript"></script>
  </head>
  
  <body style="background-color:#bcc7d7;">
    <div class="pb-5 sticky-top"><%= render 'layouts/header' %></div>
    <%= flash[:notice] %>
    <div class="mb-5"><%= yield %></div>
    <div class="pt-5"><%= render 'layouts/footer' %></div>
  </body>
</html>