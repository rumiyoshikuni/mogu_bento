<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "sidebar", genres: @genres %>
    </div>
    <div class="col-lg-4">
      <%= image_tag @item.get_image(300,300), class: "mt-5 mb-5" %>
    </div>
    <div class="col-lg-5">
      <div>
        <h2 class="mt-5 mb-3"><%= @item.name%></h2>
        <p><%= @item.introduction %></p>
      </div>
      <div class="mt-5">
        <p>
          <strong class="h5">¥ <%= @item.with_tax_price %></strong>
          <span> (税込）</span>
        </p>
      </div>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :quantity, *[1..10], class: "ml-5" %>
        <% if current_customer == pre_oder_customer %>
          <% link_to "ネットで予約注文の方はこちらから", new_pre_order_path(pre_order), class: "btn btn-sm btn-danger pull-right" %>
      	<% end %>
        <%= f.submit "カートに入れる", class: "btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>
</div>