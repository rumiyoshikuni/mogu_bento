<div class="row">
  <%= flash[:success] %>
  <div class="col-xs-12 mx-auto">
    <div class="text-center p-4">
      <h2>会員情報編集</h2>
    </div>
    <%= form_with model: @customer, url: customer_registration_path, method: :put do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="field form-group col-12">
        <%= f.label :"名前", class: "col-2 control-label" %>
        <%= f.label :"（姓）　", class: "control-label ml-5 mr-2" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-3" %>
        <%= f.label :"（名）　", class: "control-label pl-4" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-3" %>
      </div>
      
      <div class="field form-group col-12">
        <%= f.label :"フリガナ", class: "col-2 control-label" %>
        <%= f.label :"（セイ）", class: "control-label ml-5 mr-2" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-3" %>
        <%= f.label :"（メイ）", class: "control-label pl-4" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-3" %>
      </div>
    
      <div class="field form-group col-12">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-4 control-label" %>
        <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number", class: "col-3" %>
      </div>
      
      <div class="field form-group col-12">
        <%= f.label :"メールアドレス", class: "col-3 control-label mr-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3 ml-5" %>
      </div>
      
      <div class="actions text-center p-3">
        <%= f.submit "編集内容を保存", class: "btn btn-success rounded-pill" %>
        <%= link_to "退会する", quit_customers_path, class: "btn btn-danger rounded-pill" %>
      </div>
    <% end %>
    
    
  </div>
</div>