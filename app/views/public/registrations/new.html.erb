<div class="container my-5">
  <div class="row px-4">
    <h2 class="ml-4 py-4">新規会員登録</h2>
  </div>

  <div class="col-12 registrations">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="field row mt-2">
        <p class="col-3">名前</p>
        <%= f.label :'(姓)', class: 'col-1' %>
        <%= f.text_field :last_name, autofocus: true, :placeholder => "弁当" %>
        <%= f.label :'(名)', class: 'col-1' %>
        <%= f.text_field :first_name, autofocus: true, :placeholder => "太郎" %>
      </div>

      <div class="field row mt-2">
        <p class="col-3">フリガナ</p>
        <%= f.label :'(セイ)', class: 'col-1' %>
        <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "ベントウ" %>
        <%= f.label :'(メイ)', class: 'col-1' %>
        <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "タロウ" %>
      </div>

      <div class="field row mt-2">
        <p class="col-4">メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if session[:customer].present? %>
        <% @customer.postcode = session[:customer]["postcode"] %>
        <% @customer.address = session[:customer]["address"] %>
      <% end %>

      <div class="field row mt-2">
        <p class="col-4">電話番号(ハイフンなし10or11桁)</p>
        <%= f.text_field :tel_number, autofocus: true, placeholder: '00011112222' %>
      </div>

      <div class="field row mt-2">
        <p class="col-4">パスワード(6文字以上)</p>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field row mt-2">
        <p class="col-4">パスワード(確認用)</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions row mt-3">
        <div class="col-4"></div>
        <%= f.submit "新規登録",class: "btn btn-danger rounded-pill" %>
      </div>
    <% end %>
  </div>

    <div class="col-xs-9">
      <p class="new-link text-left">
        <h3 class="ml-4 py-4">既に登録済みの方は</h3>
        <%= link_to "こちら", new_customer_session_path, class: "underline" %>からログインしてください。
      </p>
    </div>
    
</div>
