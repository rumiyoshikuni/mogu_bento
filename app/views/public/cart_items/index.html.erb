<div class="container my-5 px-5 px-sm-0">
  <div class="row">
    <span class="text-info"><%= "ショッピングカート" %></span> > <%= "予約注文情報入力" %> > <%= "予約注文情報確認" %> ><%= "ご注文完了" %>
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h4 class="">ショッピングカート</h4>
        </div>
          <div class="col-6 text-right">
            <%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete,
              class: "btn btn-danger rounded-pill", "data-confirm" => "本当に空にしますか？" %>
          </div>

          <table class="table table-bordered">
             <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
             </tr>
              <% total = 0 %> <!--合計金額totalの初期化-->
              <% if current_customer.cart_items.present? %> <!--カート内に商品があった場合-->
                <% @cart_items.each do |cart_item| %>
                  <tr>
                    <td>
                      <%= image_tag cart_item.item.get_image(100,100) %> <!--商品画像-->
                      <%= cart_item.item.name %> <!--商品名-->
                    </td>
                    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %> 円</td> <!--商品単価(価格×1.1)-->
                    <td>
                      <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
                        <%= f.select :quantity, *[1..10], class: "ml-5" %>
                        <%= f.submit "変更",class: "btn btn-success rounded-pill" %> <!--セレクトboxで数量変更-->
                      <% end %>
                    </td>
                    <td>
                      <% subtotal = ((cart_item.item.price*cart_item.quantity)*1.1).to_i %> <!--小計を計算する-->
                      <%= cart_item.subtotal.to_s(:delimited) %> 円 <!--小計を表示-->
                    </td>
                    <td>
                      <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger rounded-pill" %>
                    </td>
                  </tr>
                    <% total += cart_item.subtotal %> <!--アイテムごとに合計金額totalに反映 計算しておく-->
                <% end %>
              <% end %>
          </table>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6 text-left">
      <%= link_to "買い物を続ける", items_path, class:"btn btn-info rounded-pill" %>
    </div>
    <table class="table table-bordered col-2 text-right ml-5">
      <tr>
        <th>合計金額</th>
          <td><%= total.to_s(:delimited) %> 円</td>
      </tr>
    </table>
  </div>
</div>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10 ">
      <div class="text-center">
      <% if @cart_items.any? %>
        <%= link_to "情報入力に進む", new_pre_order_path, class:"btn btn-success rounded-pill" %>
      <% end %>
      </div>
    </div>
  </div>
</div>