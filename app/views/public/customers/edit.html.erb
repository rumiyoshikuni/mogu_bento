<div class="container py-5">
  <div class="row">
    <h5 class="col-4 text-center">会員情報編集</h5>
  </div>
  <%= form_with(model: @customer, url: customer_registration_path, local: true ) do |f| %>

  <div class="col-xs-10">
    
    <div class="form-group col-xs-12">
      <%= f.label :"氏名", class: "col-sm-3 control-label" %>
      <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name" %>
      <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name" %>
    </div>
    
    <div class="form-group col-xs-12">
      <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
      <%= f.text_field :last_name_kana, class: "kana_last_name col-sm-3 form-control-static name" %>
      <%= f.text_field :first_name_kana, class: "kana_first_name col-sm-3 form-control-static name" %>
    </div>
    
    <div class="form-group col-xs-12">
      <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
    </div>
    
    <div class="form-group col-xs-12">
      <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
      <%= f.text_field :tel_number, class: "col-sm-2 form-control-static" %>
    </div>
    
    <div class="actions ">
    <%= f.submit "編集内容を保存する", class: "btn btn-primary rounded-pill" %>
  
    <%= link_to '退会する', customer_session_path, data: { confilm: "本当に退会しますか？" },class: "glyphicon glyphicon-tint btn btn-danger rounded-pill"%>
    </div>
  </div>
  <% end %>
  
</div>