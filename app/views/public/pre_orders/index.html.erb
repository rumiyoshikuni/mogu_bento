<div class="container px-5 px-sm-0">
  <div calss="row">
    <div class="col-xs-12">
      <h5 class="alert alert-secondary text-center"><strong>注文履歴一覧</strong></h5>
        <% if @orders.present? %>
          <table class="table table-hover table-bordered">
            <thead>
              <tr class="info">
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <%= order.created_at.strftime('%Y/%m/%d') %>
                  </td>
                  <td class="text-left">
                    〒<%= order.postal_code %><%= order.address %><br>
                    <%= order.name %>
                  </td>
                  <td>
                    <% order.order_details.each do |order_detail| %>
                      <%= order_detail.item.name %>
                    <% end %>
                  </td>
                  <td class="text-right">
                    <%= "#{(order.total_price + order.postage).to_s(:delimited)}" %>円
                  </td>
                  <td>
                    <%= order.status_i18n %>
                  </td>
           	      <td>
                    <%= form_with model: order, url: order_path(order), method: :get do |f| %>
                      <%= f.submit "表示する", class: "btn btn-info" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>注文履歴がありません。</p>
        <% end %>
        <%= paginate @orders %>
    </div>
  </div>
</div>