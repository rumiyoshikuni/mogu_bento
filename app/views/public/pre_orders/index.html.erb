<div class="container px-5 px-sm-0">
  <div calss="row">
    <div class="col-xs-12">
      <h5 class="alert alert-secondary text-center"><strong>予約注文履歴一覧</strong></h5>
        <% if @pre_orders.present? %>
          <table class="table table-hover table-bordered">
            <thead>
              <tr class="info">
                <th>予約注文日</th>
                <th>予約注文商品</th>
                <th>受取り日</th>
                <th>受取り時間</th>
                <th>ご要望</th>
                <th>支払金額</th>
                <th>注文詳細</th>
              </tr>
            </thead>
            <tbody>
              <% @pre_orders.each do |pre_order| %>
                <tr>
                  <td>
                    <%= pre_order.created_at.strftime('%Y年%m月%d日') %>
                  </td>
                  <td>
                    <% pre_order.pre_order_details.each do |pre_order_detail| %>
                      <%= pre_order_detail.item.name %>
                    <% end %>
                  </td>
                  <td class="text-left">
                    <%= pre_order.receiving_date.strftime('%m月%d日') %><br>
                  </td>
                  <td class="text-left">
                    <%= pre_order.receiving_time.strftime("%H時%M分") %><br>
                  </td>
                  <td class="text-left">
                    <%= pre_order.demand %><br>
                  </td>
                  <td class="text-right">
                    <%= pre_order.total_payment.to_s(:delimited) %>円
                  </td>
           	      <td>
                    <%= form_with model: pre_order, url: pre_order_path(pre_order), method: :get do |f| %>
                      <%= f.submit "表示する", class: "btn btn-info" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>注文履歴がありません。</p>
        <% end %>
        <%= paginate @pre_orders %>
    </div>
  </div>
</div>