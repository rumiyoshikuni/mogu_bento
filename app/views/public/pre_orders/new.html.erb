<div class="container px-5 px-sm-0">
  <div class="row">
  　　<div class="col-12">
      <h5 class="alert alert-secondary text-center"><strong>注文情報入力</strong></h5>
  　　</div>
  </div>
  <div class="col-4 font-weight-bold bg-warning">
  <%= flash[:alert] %>
  </div>
    <!-- @pre_order でセレクトボックスを使って情報を送る -->
    <%= form_with model: @pre_order, url: check_pre_orders_path, local: true do |f| %>
      <div class="row">
        <div class="col-4">
          <div class="col-12">
            <h5 class="col-xs-3 border-bottom"><strong>受取日変更</strong></h5>
              <div class="col-xs-10 ml-5 receiving_date_select">
                <%= f.date_select :receiving_date, use_month_numbers: true, class: 'time-box', (0..6).to_a.map {|i| [(Time.now + i.days).strftime("%m月%d日(#{%w(日 月 火 水 木 金 土)[(Time.now + i.days).wday]})")]}, {} {:class => 'class'} %>
    <% end %>
  </div>
</div>