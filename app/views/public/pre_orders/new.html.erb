<div class="container my-5 px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h4>予約注文情報入力</h4>
      </div>
      <% if current_customer.cart_items.present? %>
      <div class="col-4 font-weight-bold bg-warning">
      <%= flash[:alert] %>
      </div>
        <div class="col-11 offset-1">
          <!-- @pre_order でセレクトボックスを使って情報を送る -->
          <%= form_with model: @pre_order, url: check_pre_orders_path, method: :post do |f| %>
            <div class="form-group row">
              <p class="col-3">受取り日変更</p>
              <%= f.date_select :receiving_date, use_two_digit_numbers: true, discard_year: true, class: "ml-5" %>
            </div>
            
            <div class="form-group row">
              <p class="col-3">受取り日時間</p>
              <%= f.time_select :receiving_time, {}, minute_step: 10, class: 'time-box' %>
            </div>
            
            <div class="form-group row">
              <p class="col-3">その他ご要望等</p>
              <%= f.text_area :demand, class: "col-8" %>
            </div>
            
            <div class="p-5 text-right">
              <%= f.submit "確認画面へ進む", class: "btn btn-info col-xs-5" %>
            </div>
          <% end %>
          <% else %>
          <p>ご注文の商品を選択して下さい。</p>
          <p><%= link_to "商品一覧", items_path, class: "btn btn-success" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>