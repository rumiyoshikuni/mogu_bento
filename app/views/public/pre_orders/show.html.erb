<div class="container px-5 px-sm-0">
  <div calss="row">
    <h5 class="alert alert-secondary text-center"><strong>予約注文履歴詳細</strong></h5>
    <% if @order.present? %>
      <div class="col-xs-7">
        <strong>予約注文情報</strong>
          <table class="table table-bordered">
            <tbody>
                <tr>
                  <th class="info">予約注文日</th>
                    <td class="text-left"><%= @pre_order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                　<th class="info">受取り日</th>
                    <td class="text-left"><%= @receiving_date %></td>
                </tr>
                <tr>
                　<th class="info">受取り時間</th>
                    <td class="text-left"><%= @pre_order.receiving_time %></td>
                </tr>
                <tr>
                  <th class="info">ご要望</th>
                    <td class="text-left"><%= @pre_order.demand %></td>
                </tr>
            </tbody>
          </table>
      </div>
  
      <div class="col-xs-3 col-xs-offset-1">
        <strong>請求情報</strong>
          	<table class="table table-bordered">
                <th class="info">ご請求金額</th>
                <td class="text-right col-xs-5"><%= @total_payment.to_s(:delimited) %>円</td>
              </tr>
          </table>
      </div>
      <div class="col-xs-10">
        <strong></i>予約注文内容</strong>
          <table class="table table-striped table-bordered">
            <thead>
            <tr class="info">
              <th>商品</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
            </thead>
            <tbody>
            <% @pre_order_details.each do |pre_order_detail| %>
              <tr>
              <td><%= pre_order_detail.item.name %></td>
              <td class="text-right"><%= (pre_order_detail.item.with_tax_price).to_s(:delimited) %>円</td>
              <td class="text-right"><%= pew_order_detail.quantity %></td>
              <td class="text-right"><%= (pew_order_detail.item.with_tax_price * pew_order_detail.quantity).to_s(:delimited) %>円</td>
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>
    <% else %>
      <p>注文履歴がありません。</p>
    <% end %>
  </div>
</div>